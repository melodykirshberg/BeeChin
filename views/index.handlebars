<header class="jumbotron container">
  <div class="row">
    <div class="col-md-4 text-center">
      <img src="/img/Bee.png" id="logo" alt="Bee">
      <h1>BeeChin!</h1>
      <p>What's buzzin'?</p>
    </div>
    <div class="col-md-8 px-5">
      <form class="form" id="newBuzzForm">
        <div class="row">
          <div class="col-6">
            <h4 class="mb-1">Display name</h4>
            <div class="form-group">
              <input id="newBuzzDisplayName" name="displayName" type="text" class="form-control"></input>
              <div class="small">(Leave blank to post anonymously)</div>
            </div>
          </div>
          <div class="col-6">
            <h4 class="mb-1">Avatar</h4>
            <div class="form-group">
              <select name="avatar" title="Select your avatar" class="selectpicker">
                <option value="1">Lily</option>
                <option value="2">Mistletoe</option>
                <option value="3">Pansy</option>
                <option value="4">Succulent</option>
                <option value="5">Sunflower</option>
              </select>
            </div>
          </div>
        </div>
        <h4 class="mb-1">Create new buzz!</h4>
        <div class="form-group">
          <textarea id="newBuzzText" name="text" class="form-control" rows="3"></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="submit">Create new buzz!</button>

        </div>
      </form>
    </div>
  </div>
  </div>
</header>

<main class="container">

  <div class="card bg-transparent border-0">
    <div class="card-header main-header">
      <ul class="nav nav-pills card-header-pills">
        <li class="nav-item">
          <a class="nav-link" href="/">Newest</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/best">Best</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/oldest">Oldest</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/worst">Worst</a>
        </li>
      </ul>
    </div>
    <div class="card-body bg-transparent">
      {{#each sortedPostsWithComments}}
      {{> post }}
      {{/each}}
    </div>
  </div>
</main>

<footer class="container">
  <div class="row">
    <div class="col footer">
      <hr>
      <a href="https://github.com/verlitas/Project-2">Repo</a>
    </div>
  </div>
</footer>

